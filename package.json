{
  "name": "obelix",
  "version": "1.0.0",
  "description": "This wep app allows you to rent boats.",
  "repository": "https://github.com/anbraten/obelix",
  "author": "Anbraten",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv concurrently \"yarn dev:app\" \"yarn dev:backend\"",
    "dev:app": "dotenv yarn workspace @obelix/app run dev",
    "dev:backend": "dotenv yarn workspace @obelix/backend run dev",
    "build": "yarn workspace @obelix/app run build",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint --fix",
    "generate:config": "./docker/set-env-vars.sh ./packages/app/public/env-config.js",
    "release": "dotenv lerna version --conventional-commits --create-release github"
  },
  "resolutions": {
    "**/workbox-webpack-plugin": "5.1.4"
  },
  "dependencies": {
    "concurrently": "5.3.0",
    "dotenv-cli": "4.0.0"
  },
  "devDependencies": {
    "lerna": "4.0.0"
  }
}
